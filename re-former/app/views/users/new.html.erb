        <% end %>
      </ul>
    </div>
  <% end %>
  </div>

  <div>
    <%= form.label :username, "Your user name here" %>
    <%= form.text_field :username %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.text_field :email, placeholder: "example@example.com" %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <%= form.submit %>

